import { Users } from "lucide-react";
import { Button } from "@/components/ui/button";
import { useToast } from "@/components/ui/use-toast";
export const Partners = () => {
  const { toast } = useToast();
  const handlePartnerClick = () => {
    const referralLink = 'https://t.me/MyMindBot?start=referral123';
    navigator.clipboard.writeText(referralLink).then(() => {
      toast({
        title: "–£—Å–ø–µ—à–Ω–æ!",
        description: "–†–µ—Ñ–µ—Ä–∞–ª—å–Ω–∞—è —Å—Å—ã–ª–∫–∞ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–∞ –≤ –±—É—Ñ–µ—Ä –æ–±–º–µ–Ω–∞",
      });
    }).catch(() => {
      toast({
        title: "–í–∞—à–∞ —Ä–µ—Ñ–µ—Ä–∞–ª—å–Ω–∞—è —Å—Å—ã–ª–∫–∞",
        description: referralLink,
      });
    });
  };
  return (
    <section id="partners" className="py-20 bg-background">
      <div className="container mx-auto px-4 text-center">
        <h2 className="text-3xl md:text-4xl font-bold mb-6">
          –ü–∞—Ä—Ç–Ω—ë—Ä—Å–∫–∞—è –ø—Ä–æ–≥—Ä–∞–º–º–∞
        </h2>
        <p className="text-xl mb-8 max-w-2xl mx-auto">
          –ó–∞—Ä–∞–±–∞—Ç—ã–≤–∞–π—Ç–µ 30% —Å –∫–∞–∂–¥–æ–π –æ–ø–ª–∞—Ç—ã –ø—Ä–∏–≥–ª–∞—à–µ–Ω–Ω–æ–≥–æ –≤–∞–º–∏ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        </p>
        <Button
          size="lg"
          className="bg-gradient-to-r from-custom-primary to-custom-secondary hover:opacity-90"
          onClick={handlePartnerClick}
        >
          <Users className="mr-2" />
          –ü–æ–ª—É—á–∏—Ç—å —Ä–µ—Ñ–µ—Ä–∞–ª—å–Ω—É—é —Å—Å—ã–ª–∫—É
        </Button>
      </div>
    </section>
  );
};
